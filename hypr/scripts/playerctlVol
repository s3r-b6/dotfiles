#/bin/bash
# dumb little script
if [[ "$1" == "--inc" ]]; then
  op="+"
elif [[ "$1" == "--dec" ]]; then
  op="-"
else
  echo "Usage: $0 [--inc|--dec]" >&2
  exit 1
fi


volume=$(playerctl -p spotify volume)
new_volume=$(echo "$volume $op 0.1" | bc)

if (( $(echo "$new_volume < 0" | bc -l) )) || (( $(echo "$new_volume > 1" | bc -l) )); then
    echo "New volume level is out of range (0 to 1)."
else
    playerctl -p spotify volume $new_volume
fi
